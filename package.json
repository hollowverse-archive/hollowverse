{
  "name": "hollowverse",
  "version": "1.0.0",
  "description": "Hollowverse.com",
  "main": "index.js",
  "scripts": {
    "client/dev": "webpack-dev-server --historyApiFallback true --content-base public --config client/webpack.config.ts",
    "client/build": "webpack --optimize-minimize --define process.env.NODE_ENV=\"'production'\" --config client/webpack.config.ts",
    "server/express": "nodemon --exec ts-node -- server/src/index.tsx",
    "server/firebase": "npm run client/build && firebase serve",
    "deploy": "firebase login && ts-node deploy.ts",
    "lint": "tslint '**/*.ts' -e '**/node_modules/**' --fix",
    "precommit": "lint-staged"
  },
  "author": "M.K. Safi <msafi@msafi.com>",
  "license": "Unlicense",
  "homepage": "https://github.com/msafi/hollowverse#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "pre-commit": "lint-staged",
