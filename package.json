{
  "name": "hollowverse",
  "version": "1.0.0",
  "description": "Hollowverse.com",
  "main": "index.js",
  "repository": "https://github.com/hollowverse/hollowverse.git",
  "scripts": {
    "test": "run-p validate-file-names lint-js lint-ts",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-ts": "tslint './*.ts' 'server/src/*.ts{,x}' --project .",
    "client/webpack/dev": "API_ENDPOINT=http://127.0.0.1:${API_PORT:-8080}/graphql HOT=1 NODE_ENV=development webpack-dev-server --host=0.0.0.0 --config client/webpack.config.js",
    "client/webpack/build": "NO_PERF_CHECKS=1 DEBUG=build NODE_ENV=production webpack --config client/webpack.config.js",
    "client/build": "API_ENDPOINT=https://api.hollowverse.com/graphql run-s client/graphql/build client/webpack/build",
    "client/dev": "run-p 'client/*/dev'",
    "client/clean": "rm -rf ./client/dist",
    "client/stats": "NO_PERF_CHECKS=1 NODE_ENV=production webpack --config client/webpack.config.js --json > stats.json",
    "client/graphql/schema": "apollo-codegen introspect-schema ${API_HOST:-http://localhost}:${API_PORT:-8080}/graphql --output ./graphqlSchema.json",
    "client/graphql/types": "apollo-codegen generate 'client/**/*.ts{,x}' --target typescript --output client/graphqlOperationResultTypes.ts",
    "client/graphql/dev": "nodemon --watch client/src --ext ts,tsx --exec 'run-s client/graphql/schema client/graphql/types'",
    "client/graphql/build": "run-s client/graphql/schema client/graphql/types",
    "server/static-server": "node server/dist/staticServer.js",
    "server/static-server/dev": "nodemon --watch server/src --ext ts,tsx,json --exec 'ts-node server/src/staticServer.ts --project ./server'",
    "server": "node server/dist/server.js",
    "server/dev": "nodemon --watch server/src --ext ts,tsx,json --exec 'node --inspect=0.0.0.0:9231 -r 'ts-node/register' server/src/server.ts'",
    "server/build": "tsc --project ./server",
    "server/clean": "rm -rf ./server/dist",
    "dev": "run-p client/dev server/dev",
    "start": "run-p server/static-server server",
    "validate-file-names": "validate-file-names",
    "lint-staged": "lint-staged"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/hollowverse#readme",
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/**/*.{s,}css": [
      "stylelint --syntax scss",
      "prettier --write  --parser postcss --single-quote --trailing-comma all",
      "git add"
    ]
  },
  "pre-commit": [
    "validate-file-names",
    "lint-staged"
  ],
  "browserslist": [
    "last 5 Chrome versions",
    "last 5 Firefox versions",
    "last 2 versions",
    "IE >= 11",
    "not OperaMini all"
  ],
  "dependencies": {
    "@hollowverse/common": "https://github.com/hollowverse/common",
    "algoliasearch": "^3.24.0",
    "aphrodite": "^1.2.1",
    "babel-preset-minify": "^0.2.0",
    "body-parser": "^1.17.2",
