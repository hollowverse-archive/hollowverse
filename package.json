{
  "name": "hollowverse",
  "version": "1.0.0",
  "description": "Hollowverse.com",
  "main": "index.js",
  "repository": "https://github.com/hollowverse/hollowverse.git",
  "scripts": {
    "pretest": "npm-run-all -n -s app/graphql/build -p validate-filenames lint",
    "test": "run-p -n app/test",
    "app/test/webpack/dev": "NODE_ENV=test NO_TYPE_CHECK=1 webpack --config src/webpack/webpack.config.test.js --watch",
    "app/test/jest/dev": "jest --watchAll",
    "app/test/dev": "npm-run-all -n -s clean/test -p 'app/test/*/dev'",
    "app/test/webpack": "NODE_ENV=test webpack --config src/webpack/webpack.config.test.js",
    "app/test/jest": "jest --coverage --verbose --color",
    "app/test": "npm-run-all -n -s clean/test app/test/webpack app/test/jest coverage/remap",
    "lint": "run-p -n lint-css lint-js lint-graphql lint-ts check-ts",
    "lint-css": "stylelint --syntax scss 'src/app/**/*.scss'",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-graphql": "run-s -n app/graphql/schema && eslint --ext .graphql --ext .gql 'src/**/*.{gql,graphql}'",
    "lint-ts/eslint": "eslint 'src/app/**/*.ts{,x}' --config src/app/.eslintrc.json --no-eslintrc",
    "lint-ts/tslint/app": "tslint 'src/app/**/*.ts{,x}' --project src/app",
    "lint-ts/tslint/root": "tslint '**/*.ts{,x}' --project . --exclude 'node_modules/**/*' --exclude 'src/app/**/*'",
    "lint-ts/tslint": "run-p -n 'lint-ts/tslint/*'",
    "lint-ts": "run-p -n 'lint-ts/*'",
    "server/check-ts": "tsc --project ./src --noEmit",
    "app/check-ts": "tsc --project ./src/app --noEmit",
    "check-ts": "run-p -n '*/check-ts'",
    "app/webpack/build": "NODE_ENV=production NO_PERF_CHECKS=1 node ./build.js",
    "bundlesize": "bundlesize",
    "app/build": "API_ENDPOINT=${API_ENDPOINT:-https://api.hollowverse.com/graphql} run-s -n app/graphql/build app/webpack/build bundlesize",
    "app/analyze": "webpack-bundle-analyzer dist/stats.json dist/client",
    "app/graphql/schema": "export API_ENDPOINT=${API_ENDPOINT:-https://api.hollowverse.com/graphql}; apollo-codegen introspect-schema ${API_ENDPOINT} --output ./graphqlSchema.json",
    "app/graphql/types": "apollo-codegen generate 'src/app/**/*.{graphql,gql}' --target typescript --output src/app/api/types.ts",
    "app/graphql/dev": "nodemon -q --watch src/app --ext graphql,gql --exec 'run-s app/graphql/schema app/graphql/types'",
    "app/graphql/build": "run-s -n app/graphql/schema app/graphql/types",
    "server/app-server/dev": "API_ENDPOINT=${API_ENDPOINT:-https://api.hollowverse.com/graphql} APP_SERVER_PORT=${APP_SERVER_PORT:-3001} HOT=1 NODE_ENV=development node --inspect=9231 -r 'source-map-support/register' -r 'ts-node/register' src/appServer.dev.ts",
    "server/app-server/start": "node dist/appServer.js",
    "server/main-server/dev": "PORT=${PORT:-8081} API_ENDPOINT=${API_ENDPOINT:-https://api.hollowverse.com/graphql} nodemon -q --watch src --ignore src/app --ignore src/webpack --ext ts,tsx,json --exec 'node --inspect=0.0.0.0:${SERVER_DEBUG_PORT:-9232} -r 'ts-node/register' src/mainServer.ts'",
    "remotedev": "remotedev --hostname=localhost --port=8000",
    "server/main-server/start": "node dist/mainServer.js",
    "server/build": "tsc --project ./src",
    "build": "npm-run-all -n -s clean -p app/build server/build",
    "start": "NODE_ENV=production run-p server/main-server/start",
    "dev": "NODE_ENV=development API_ENDPOINT=${API_ENDPOINT:-https://api.hollowverse.com/graphql} npm-run-all -n -s clean -p app/graphql/dev server/app-server/dev remotedev",
    "test/dev": "run-p -n app/test/dev",
    "clean": "del-cli './src/app/**/*.module.scss.d.ts' './dist' && mkdir -p ./dist",
    "clean/test": "del-cli './coverage' './__tests__/bundle' './__tests__/tests/!(__snapshots__)'",
    "validate-filenames": "validate-filenames -c commonconfig.js",
    "lint-staged": "lint-staged",
    "coverage/remap/json": "cat coverage/coverage-final.json | remap-istanbul --exclude 'node_modules,src/app/__tests__,^external\\s,webpack/' -o coverage/coverage-remapped.json",
    "coverage/remap/lcov": "cat coverage/coverage-final.json | remap-istanbul --exclude 'node_modules,src/app/__tests__,^external\\s,webpack/' -o coverage/lcov-remapped.info -t lcovonly",
    "coverage/remap": "run-p -n 'coverage/remap/*'",
    "coverage/html": "remap-istanbul --exclude 'node_modules,src/app/__tests__,^external\\s,webpack/' -i coverage/coverage-final.json -o coverage/lcov-report -t html --basePath .",
    "coverage/coveralls": "cat ./coverage/lcov-remapped.info | coveralls "
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/hollowverse#readme",
  "bundlesize": [
    {
      "path": "./dist/client/**/!(vendor).*.js",
      "maxSize": "15 kB"
    },
    {
      "path": "./dist/client/**/vendor.*.js",
      "maxSize": "130 kB"
    },
    {
      "path": "./dist/client/**/*.module.*.css",
      "maxSize": "5 kB"
    },
    {
      "path": "./dist/client/**/*.global.*.css",
      "maxSize": "10 kB"
    },
    {
      "path": "./dist/client/**/*.html",
      "maxSize": "3 kB"
    },
    {
      "path": "./dist/client/**/*.svg",
      "maxSize": "30 kB"
    }
  ],
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/**/*.{s,}css": [
      "stylelint --syntax scss",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn pretest",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "browserslist": [
    "and_chr >= 62",
    "chrome >= 55",
    "edge >= 14",
    "firefox >= 57",
    "ios_saf >= 9.3",
    "safari >= 9.1"
