    "@types/classnames": "2.2.0",
    "@types/express": "^4.0.35",
    "@types/extract-text-webpack-plugin": "^2.0.1",
    "@types/lodash": "^4.14.65",
    "@types/node": "^7.0.27",
    "@types/query-string": "^4.3.1",
    "@types/react": "^15.0.26",
    "@types/react-addons-css-transition-group": "^15.0.1",
    "@types/react-dom": "^15.5.0",
    "@types/react-onclickoutside": "^5.7.4",
    "@types/react-redux": "4.4.40",
    "@types/react-router": "^4.0.4",
    "@types/react-router-dom": "^4.0.3",
    "@types/react-router-redux": "^5.0.0",
    "@types/reduce-reducers": "^0.1.0",
    "@types/redux-actions": "^1.2.5",
    "@types/shelljs": "^0.7.2",
    "algoliasearch": "^3.22.3",
    "aphrodite": "^1.2.1",
