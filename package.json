    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-onclickoutside": "^6.1.1",
    "react-redux": "^5.0.5",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "react-router-redux": "^5.0.0-alpha.4",
    "reduce-reducers": "^0.1.2",
    "redux": "^3.7.1",
    "redux-actions": "^2.2.1",
    "redux-saga": "^0.15.4",
    "shelljs": "^0.7.8",
    "sumo-logger": "^1.0.1"
