{
  "name": "hollowverse",
  "version": "1.0.0",
  "description": "Hollowverse.com",
  "main": "index.js",
  "repository": "https://github.com/hollowverse/hollowverse.git",
  "scripts": {
    "test": "common-run-p validate-file-names lint-js lint-ts lint-css",
    "lint-css": "common-stylelint --syntax scss 'src/app/**/*.scss'",
    "lint-js": "common-eslint '**/*.js{,x}'",
    "lint-ts": "common-tslint './*.ts' 'src/**/*.ts{,x}' --project .",
    "app/webpack/build": "NO_PERF_CHECKS=1 NODE_ENV=production node ./build.js",
    "app/build": "API_ENDPOINT=${API_ENDPOINT:-https://api.hollowverse.com/graphql} common-run-s app/graphql/build app/webpack/build",
    "app/graphql/schema": "apollo-codegen introspect-schema ${API_ENDPOINT} --output ./graphqlSchema.json",
    "app/graphql/types": "apollo-codegen generate 'src/app/{**,!api}/*.ts{,x}' --target typescript --output src/app/api/types.ts",
    "app/graphql/dev": "nodemon --watch src/app --ext ts,tsx --exec 'common-run-s app/graphql/schema app/graphql/types'",
    "app/graphql/build": "common-run-s app/graphql/schema app/graphql/types",
    "server/app-server/dev": "APP_SERVER_PORT=${APP_SERVER_PORT:-3001} HOT=1 NODE_ENV=development API_ENDPOINT=${API_ENDPOINT:-http://localhost:8080/graphql} node -r 'ts-node/register' src/appServer.ts",
    "server/app-server/start": "node dist/appServer.js",
    "server/main-server/dev": "PORT=${PORT:-8081} nodemon --watch src --ignore src/app --ignore src/webpack --ext ts,tsx,json --exec 'node --inspect=0.0.0.0:${SERVER_DEBUG_PORT:-9231} -r 'ts-node/register' src/mainServer.ts'",
    "server/main-server/start": "node dist/mainServer.js",
    "server/build": "common-tsc --project ./src",
    "build": "common-npm-run-all -s clean -p app/build server/build",
    "start": "NODE_ENV=production common-run-p server/main-server/start",
    "dev": "NODE_ENV=development common-run-p server/app-server/dev",
    "clean": "rm -rf ./dist && mkdir -p ./dist",
    "validate-file-names": "validate-file-names",
    "lint-staged": "common-lint-staged",
    "common-prettier": "common-prettier --write"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/hollowverse#readme",
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "common-prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/**/*.{s,}css": [
      "common-stylelint --syntax scss",
      "common-prettier --write",
      "git add"
    ]
  },
  "pre-commit": [
    "validate-file-names",
    "lint-staged"
  ],
  "browserslist": [
    "last 5 Chrome versions",
    "last 4 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "last 2 Opera versions",
    "not OperaMini all"
  ],
  "dependencies": {
    "@hollowverse/common": "https://github.com/hollowverse/common",
    "babel-plugin-universal-import": "^1.3.1",
    "babel-polyfill": "^7.0.0-beta.3",
    "body-parser": "^1.17.2",
    "classcat": "^1.0.1",
    "date-fns": "^1.29.0",
    "dom-ready": "^1.0.6",
    "domready": "^1.0.8",
    "express": "^4.15.2",
    "graphql": "^0.11.7",
    "graphql-request": "^1.4.0",
    "graphql-tag": "^2.5.0",
    "helmet": "^3.9.0",
    "history": "^4.6.3",
    "http-proxy": "^1.16.2",
    "lodash": "^4.17.4",
    "loglevel": "^1.5.1",
    "moment": "^2.19.1",
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-intersection-observer": "^2.0.1",
    "react-resolver": "^3.1.1",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "react-universal-component": "^2.6.0",
    "serialize-javascript": "^1.4.0",
    "shelljs": "^0.7.8",
    "shrink-ray": "^0.1.3",
    "sumo-logger": "^1.0.1",
    "webpack-flush-chunks": "^1.2.1"
  },
  "devDependencies": {
    "@types/autoprefixer": "^6.7.2",
    "@types/body-parser": "^1.16.4",
    "@types/domready": "^0.0.29",
    "@types/express": "^4.0.36",
    "@types/helmet": "^0.0.37",
    "@types/http-proxy": "^1.12.0",
    "@types/lodash": "^4.14.68",
    "@types/loglevel": "^1.5.3",
    "@types/node": "^8.0.8",
    "@types/query-string": "^4.3.1",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.1",
    "@types/react-loadable": "^4.0.4",
    "@types/react-router": "^4.0.12",
    "@types/react-router-dom": "^4.0.5",
    "@types/serialize-javascript": "^1.3.2",
    "@types/shelljs": "^0.7.2",
    "@types/stylelint": "^7.10.0",
    "@types/sumo-logger": "^1.0.0",
    "@types/webpack": "^3.8.1",
    "apollo-codegen": "^0.17.1",
    "autoprefixer": "^7.1.2",
    "babel-core": "6",
    "babel-eslint": "^7.2.3",
    "babel-loader": "7",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-graphql-tag": "^1.3.0",
    "babel-plugin-minify-empty-function": "^0.0.1",
    "babel-plugin-syntax-dynamic-import": "^7.0.0-beta.3",
    "babel-plugin-transform-inline-environment-variables": "^0.1.1",
    "babel-plugin-transform-node-env-inline": "^0.1.1",
    "babel-plugin-transform-remove-console": "^6.8.4",
    "babel-plugin-transform-remove-debugger": "^6.8.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.2.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-3": "^6.24.1",
    "circular-dependency-plugin": "^3.0.0",
    "css-loader": "^0.28.4",
    "extract-css-chunks-webpack-plugin": "^2.0.17",
    "favicons-webpack-plugin": "^0.0.7",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "lint-staged": "^4.0.3",
