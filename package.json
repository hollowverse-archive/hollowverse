{
  "name": "hollowverse",
  "version": "1.0.0",
  "description": "Hollowverse.com",
  "repository": "https://github.com/hollowverse/hollowverse.git",
  "scripts": {
    "client/dev": "webpack-dev-server --historyApiFallback true --content-base public --config client/webpack.config.ts",
    "client/build": "webpack --optimize-minimize --define process.env.NODE_ENV=\"'production'\" --config client/webpack.config.ts",
    "server/express": "nodemon --exec ts-node -- server/src/index.tsx",
    "server/firebase": "yarn client/build && firebase serve",
    "lint": "tslint '**/*.t{s,sx}' -e '**/node_modules/**' --fix --project ./tsconfig.json --type-check",
    "precommit": "lint-staged",
    "test": "yarn lint && yarn client/build"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/hollowverse#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "pre-commit": "lint-staged",
  "greenkeeper": {
    "ignore": []
  },
  "commonpkg": "@hollowverse/common-config",
  "dependencies": {
    "@hollowverse/common-config": "hollowverse/common-config",
    "@types/algoliasearch": "^3.18.0",
